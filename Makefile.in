#---------------------------------------------------------------------------
prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
libdir=@libdir@
includedir=@includedir@
m4dir=@datarootdir@

#--------------------------------------------------------------------------------------
foam_user_bin=@FOAM_USER_BIN@
foam_user_lib=@FOAM_USER_LIB@


#--------------------------------------------------------------------------------------
All:
	@./Allwmake

clean:
	@./Allwclean



#--------------------------------------------------------------------------------------
install:
	@ rm -rf $(libdir)/libmanagedFlu-* $(includedir)/managedFlu $(m4dir)/managedFlu $(bindir)/*FoamMF
	@ install -d $(bindir) $(libdir)/managedFlu $(includedir)/managedFlu $(m4dir)/managedFlu/admin
	@ echo "install solvers"
	@ cp -rf $(foam_user_bin)/*FoamMF $(bindir)/
	@ echo "install libs"
	@ cp -rf $(foam_user_lib)/libmanagedFlu-* $(libdir)
	@ echo "install headers"
	@ cp -rf @abs_top_builddir@/libs $(includedir)/managedFlu
	@ (cd $(includedir)/managedFlu/libs && find \( -name "*.dep" -o -name "*.cpp" \) -exec rm -rf {} \; )
	@ (cd $(includedir)/managedFlu/libs && rm -rf `find \( -type d -name "Make" \) -print` )
	@ echo "install m4"
	@ cp -rf @abs_top_builddir@/admin/managedflu_check_managedflu.m4 $(m4dir)/managedFlu/admin/
	@ cp -rf @abs_top_builddir@/admin/managedflu_check_openfoam.m4 $(m4dir)/managedFlu/admin/


#--------------------------------------------------------------------------------------	
deb:
	@./make-deb.sh deb

launchpad:
	@./make-deb.sh launchpad


#--------------------------------------------------------------------------------------
